.container
  .columns.columns-container.is-centered
    %h1.title= t('.sign_in')
  .columns.columns-container.is-centered
    = render 'layouts/partials/flash'
  .columns.columns-container.is-centered.is-multiline
    .is-3.is-offset-3
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          %p.control.has-icons-left
            = f.email_field :email, autofocus: true, autocomplete: 'email',
            placeholder: t('.email_placeholder'), class: 'input'
            %span.icon.is-small.is-left
              %i.fas.fa-envelope
        .field
          %p.control.has-icons-left
            = f.password_field :password, autocomplete: 'current-password', class: 'input',
            placeholder: t('.password_placeholder')
            %span.icon.is-small.is-left
              %i.fas.fa-lock

        - if devise_mapping.rememberable?
          .field
            .control
              = f.label :remember_me do
                = f.check_box :remember_me
                = f.label :remember_me

        = f.submit t('.sign_in'), class: 'button is-primary'
      = render 'devise/shared/links'
