.container
  .columns.columns-container.is-centered
    %h1.title= t('.change_your_password')
  .columns.columns-container.is-centered
    = render 'layouts/partials/flash'
  .columns.columns-container.is-centered.is-multiline
    .is-3.is-offset-3
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token

        .field
          %p.control.has-icons-left
            = f.password_field :password, autocomplete: 'current-password', class: 'input',
            placeholder: t('.password_placeholder')
            %span.icon.is-small.is-left
              %i.fas.fa-lock

        .field
          %p.control.has-icons-left
            = f.password_field :password_confirmation, class: 'input',
            placeholder: t('.password_confirmation_placeholder')
            %span.icon.is-small.is-left
              %i.fas.fa-lock

        = f.submit t('.change_my_password'), class: 'button is-primary'
      = render 'devise/shared/links'
